@page
@model Assignment1.Pages.ResetPasswordModel
@{
    ViewData["Title"] = "Request Password Reset";
}

<h2>@ViewData["Title"]</h2>

<p>If you've forgotten your password, please enter your email address. You will receive a link to reset your password.</p>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-info">
        @Model.Message
    </div>
}

<form method="post" asp-page-handler="RequestReset">
    <div class="form-group">
        <label for="Email">Email Address</label>
        <input type="email" class="form-control" id="Email" name="Email" required />
    </div>

    <button type="submit" class="btn btn-primary">Request Password Reset</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}