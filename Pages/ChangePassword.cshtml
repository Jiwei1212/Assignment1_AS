@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
}

<h2>Change Password</h2>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success">@Model.SuccessMessage</div>
}

<form method="post">
    <div class="mb-3">
        <label>Current Password</label>
        <input type="password" class="form-control" asp-for="Input.CurrentPassword" required />
    </div>

    <div class="mb-3">
        <label>New Password</label>
        <input type="password" class="form-control" asp-for="Input.NewPassword" required />
    </div>

    <div class="mb-3">
        <label>Confirm New Password</label>
        <input type="password" class="form-control" asp-for="Input.ConfirmPassword" required />
    </div>

    <button type="submit" class="btn btn-primary">Change Password</button>
</form>
