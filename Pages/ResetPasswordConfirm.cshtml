@page
@model Assignment1.Pages.ResetPasswordConfirmModel
@{
    ViewData["Title"] = "Reset Your Password";
}

<h2>@ViewData["Title"]</h2>

<p>Please enter your new password.</p>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}

<form method="post">
    <input type="hidden" asp-for="Token"/>
    <input type="hidden" asp-for="Email" />

    <div class="form-group">
        <label for="NewPassword">New Password</label>
        <input type="password" class="form-control" id="NewPassword" name="Input.NewPassword" required />
    </div>

    <div class="form-group">
        <label for="ConfirmPassword">Confirm Password</label>
        <input type="password" class="form-control" id="ConfirmPassword" name="Input.ConfirmPassword" required />
    </div>

    <button type="submit" class="btn btn-primary">Reset Password</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}